<body>
	<p id="notice"></p>
	<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to 'Show', book_path(book.id) %></td>
				<td><%= link_to 'Edit', edit_book_path(book.id)%></td>
				<td><%= link_to 'destroy' ,book_path(book.id), method: :delete %></td>
			</tr>
			<% end %>
		</tbody>

	</table>

	<h2>New Book</h2>
	<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
	 <div id="error_explanation" class="alert alert-danger">
	 	<h2><%= @book.errors.count %>件のerror</h2>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
	<% end %>

	<div class="field">
		<div class="field_with_errors">
		<%= f.label :title %><br>
	</div>
	<div class="field_with_errors">
		<%= f.text_field :title %>
	</div>
	</div>
	<div class="field">
		<div class="field_with_errors">
		<%= f.label :body %>
	</div>
	<div class="field_with_errors">
		<%= f.text_area :body %>
	</div>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
	<% end %>

</body>